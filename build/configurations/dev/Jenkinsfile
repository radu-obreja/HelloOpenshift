pipeline {
  agent any
  stages {
    stage('Build Application') {
      steps {
		sh "mvn clean install -P openshift-sonar"
      }
    }
    stage('Create Image Builder') {
      when {
        expression {
          openshift.withCluster() {
            return !openshift.selector("bc", "hello-openshift-dev").exists();
          }
        }
      }
      steps {
        script {
          openshift.withCluster() {
            openshift.newBuild("--name=hello-openshift-dev", "--image-stream=redhat-openjdk18-openshift:1.4", "--binary")
          }
        }
      }
    }
    stage('Build Image') {
      steps {
        script {
          openshift.withCluster() {
            openshift.selector("bc", "hello-openshift-dev").startBuild("--from-file=target/hello-openshift-0.0.1-SNAPSHOT.jar", "--wait")
          }
          openshift.withCluster() {
            openshift.tag("hello-openshift-dev:latest")
          }
        }
      }
    }
    stage('Deploy Image') {
      when {
        expression {
          openshift.withCluster() {
            return !openshift.selector('dc', 'hello-openshift-dev').exists()
          }
        }
      }
      steps {
        script {
          openshift.withCluster() {
            openshift.newApp("hello-openshift-dev:latest", "--name=hello-openshift-dev").narrow('svc').expose()
          }
        }
      }
    }	
  }
}