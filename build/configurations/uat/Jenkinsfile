pipeline {
  agent {
      label 'maven'
  }
  stages {
    stage('Build Application') {
      steps {
		sh "mvn install -P openshift"
      }
    }
    stage('Create Image Builder') {
      when {
        expression {
          openshift.withCluster() {
            return !openshift.selector("bc", "hello-openshift-uat").exists();
          }
        }
      }
      steps {
        script {
          openshift.withCluster() {
            openshift.newBuild("--name=hello-openshift-uat", "--image-stream=redhat-openjdk18-openshift:1.4", "--binary")
          }
        }
      }
    }
    stage('Build Image') {
      steps {
        script {
          openshift.withCluster() {
            openshift.selector("bc", "hello-openshift-uat").startBuild("--from-file=target/hello-openshift-0.0.1-SNAPSHOT.jar", "--wait")
          }
          openshift.withCluster() {
            openshift.tag("hello-openshift-uat:latest")
          }
        }
      }
    }
    stage('Deploy Image') {
      when {
        expression {
          openshift.withCluster() {
            return !openshift.selector('dc', 'hello-openshift-uat').exists()
          }
        }
      }
      steps {
        script {
          openshift.withCluster() {
            openshift.newApp("hello-openshift-uat:latest", "--name=hello-openshift-uat").narrow('svc').expose()
          }
        }
      }
    }	
  }
}